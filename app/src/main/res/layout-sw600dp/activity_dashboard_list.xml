<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context=".DashboardListActivity">

    <!--
    This layout is a two-pane layout for the Dashboards
    master/detail flow.
    
    -->

    <fragment android:id="@+id/dashboard_list"
        android:name="com.example.ash.energymonitor.DashboardListFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.4"
        tools:layout="@android:layout/list_content" />

    <FrameLayout android:id="@+id/dashboard_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="3.5" />

</LinearLayout>
